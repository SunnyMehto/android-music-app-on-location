<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#93aae2"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblLocationName"
            android:layout_margin="10dp"
            android:text="Location Name : "/>
        <EditText
            android:layout_margin="10dp"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:id="@+id/txtLocationName"
            android:maxLength="10"
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@drawable/txt_entry"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblLocationCoordinate"
            android:text="Location Co-ordinate :   "/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:weightSum="1">
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".99"
            android:layout_height="30dp"
            android:id="@+id/txtLocationCoordinate"
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@drawable/txt_entry"
            />
            <Button
                android:visibility="gone"
                android:layout_marginLeft="5dp"
                android:id="@+id/btnGetLocation"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:text="O"
                />
            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btnAddLocation"
            android:layout_height="50dp"
            android:layout_width="200dp"
            android:text="Add Location"
            />
    </LinearLayout>
</LinearLayout>
